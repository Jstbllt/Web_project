<!-- views/cpus_list_admin.ejs -->
<%- include("partial_headers_admin.ejs"); %>


<section class="bg-black text-white p-1">
    <h2 class="ms-2">List of Cpu</h2>
</section>

<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<section class="p-3">
    <button type="button" class="btn btn-outline-dark mb-3"><a href='/cpus/edit/0'>+ Add a new cpu</a></button>

    <table class="table table-striped table-hover table-responsive-sm border border-dark shadow align-middle">
        <thead>
            <tr class="table-active fw-bold">
                <td>ID</td>
                <td>Brand</td>
                <td>Model</td>
                <td>Base Frequency</td>
                <td>Boost Frequency</td>
                <td>Cores</td>
                <td>Show</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            <% for (var c of cpus) { %>
                <tr>
                    <td><%= c.cpu_id %></td>
                    <td><%= c.brand_name %></td>
                    <td><%= c.cpu_model %></td>
                    <td><%= c.cpu_basefrequency %></td>
                    <td><%if(c.cpu_boostfrequency==null){%>
                            NONE <%}%>
                        <%= c.cpu_boostfrequency %></td>
                    <td><%= c.cpu_cores %></td>
                    <td><button type="button" class="btn btn-outline-dark"><a href='/cpus/show/admin/<%= c.cpu_id %>'>Show</a></button></td>
                    <td>
                        <% if(c.cpu_id>10){ %>
                            <button type="button" class="btn btn-outline-dark"><a href='/cpus/edit/<%= c.cpu_id %>'>Edit</a></button>
                        <% } %>
                    <td>
                        <% if(c.cpu_id>10){ %>
                            <button type="button" class="btn btn-outline-dark" onclick="alert('Cpu has been deleted.')"> <a href="/cpus/del/<%= c.cpu_id %>">Delete</a></button>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>
<%- include("partial_footer.ejs"); %>