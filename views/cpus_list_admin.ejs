<!-- views/cpus_list_admin.ejs -->
<%- include("partial_headers_admin.ejs"); %>

<section class="p-3">
<h1>List of Cpu</h1>
<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<p><a href='/cpus/edit/0'>Add a new cpu</a></p>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>ID</td>
        <td>Brand</td>
        <td>Model</td>
        <td>Base Frequency</td>
        <td>Boost Frequency</td>
        <td>Cores</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    <% for (var c of cpus) { %>
        <tr>
            <td><%= c.cpu_id %></td>
            <td><%= c.brand_name %></td>
            <td><%= c.cpu_model %></td>
            <td><%= c.cpu_basefrequency %></td>
            <td><%= c.cpu_boostfrequency %></td>
            <td><%= c.cpu_cores %></td>
            <td><a href='/cpus/show/admin/<%= c.cpu_id %>'>Show</a></td>
            <td>
                <% if(c.cpu_id>10){ %>
                    <button> <a href='/cpus/edit/<%= c.cpu_id %>'>Edit</a></button></td>
                <% } %>
            <td>
                <% if(c.cpu_id>10){ %>
                    <button onclick="alert('CPU deleted')"> <a href="/cpus/del/<%= c.cpu_id %>">Delete</a></button>
                <% } %>
            </td>
        </tr>
    <% } %>
</table>
</section>
<%- include("partial_footer.ejs"); %>