<!-- views/gpus_list.ejs -->
<!-- RECEIVES: computers [an array of computer objects] + flashMessage [string, the error message] -->
<%- include("partial_headers.ejs"); %>

<h1>List of GPU</h1>
<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<p><a href='/gpus/edit/0'>Add a new GPU</a></p>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>ID</td>
        <td>Brand</td>
        <td>Model</td>
        <td>Fill-rate pixel</td>
        <td>CU</td>
        <td>Memory</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    <% for (var g of gpus) { %>
        <tr>
            <td><%= g.gpu_id %></td>
            <td><%= g.brand_name %></td>
            <td><%= g.gpu_model %></td>
            <td><%= g.gpu_fillrate_pixel %></td>
            <td><%= g.gpu_cu %></td>
            <td><%= g.gpu_memory %></td>
            <td><a href='/gpus/show/<%= g.gpu_id %>'>Show</a></td>
            <td><a href='/gpus/edit/<%= g.gpu_id %>'>Edit</a></td>
            <td>
                <% if(g.gpu_id>10){ %>
                    <button onclick="alert('GPU deleted')"> <a href="/gpus/del/<%= g.gpu_id %>">Delete</a></button>
                <% } %>
            </td>
        </tr>
    <% } %>
</table>
<%- include("partial_footer.ejs"); %>