<!-- views/gpus_list.ejs -->
<%- include("partial_headers.ejs"); %>

<section class="p-3">
<h1>List of GPU</h1>
<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>ID</td>
        <td>Brand</td>
        <td>Model</td>
        <td>Fill-rate pixel</td>
        <td>CU</td>
        <td>Memory</td>
        <td>Show</td>
    </tr>

    <% for (var g of gpus) { %>
        <tr>
            <td><%= g.gpu_id %></td>
            <td><%= g.brand_name %></td>
            <td><%= g.gpu_model %></td>
            <td><%= g.gpu_fillrate_pixel %></td>
            <td><%= g.gpu_cu %></td>
            <td><%= g.gpu_memory %></td>
            <td><a href='/gpus/show/<%= g.gpu_id %>'>Show</a></td>
        </tr>
    <% } %>
</table>
</section>
<%- include("partial_footer.ejs"); %>