<!-- views/computers_list.ejs -->
<%- include("partial_headers.ejs"); %>


<section class="bg-black text-white p-1">
    <h2 class="ms-2">List of Computers</h2>
</section>

<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<section class="p-3">

<table class="table table-striped table-hover table-responsive-sm border border-dark shadow align-middle">
    <thead>
        <tr class="table-active fw-bold">
            <td>ID</td>
            <td>Brand</td>
            <td>Model</td>
            <td>CPU</td>
            <td>GPU</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Show</td>
        </tr>
    </thead>
    <tbody>
    <% for (var c of computers) { %>
        <tr>
            <td><%= c.computer_id %></td>
            <td><%= c.brand_name %></td>
            <td><%= c.computer_model %></td>
            <td>
                <% for (var b of brands) { %>
                    <% if(c.cpu_brand==b.brand_id) { %>
                        <%= b.brand_name %>
                    <% } %>
                <% } %>
                <%= c.cpu_model %></td>
            <td><% if(c.gpu_brand==null) { %>
                    NONE
                <% } %>
                <% for (var b of brands) { %>
                    <% if(c.gpu_brand==b.brand_id) { %>
                        <%= b.brand_name %>
                    <% } %>
                <% } %>
                <%= c.gpu_model %></td>
            <td><%= c.computer_price %></td>
            <td><%= c.computer_stocks %></td>
            <td><button type="button" class="btn btn-outline-dark"><a href='/computers/show/<%= c.computer_id %>'>Show</a></button></td>
        </tr>
    <% } %>
    </tbody>
</table>
</section>
<%- include("partial_footer.ejs"); %>