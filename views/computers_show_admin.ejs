<!-- views/computers_show_admin.ejs -->
<%- include("partial_headers_admin.ejs"); %>

<section class="p-3">
<h1>Single Computer Datasheet</h1>

<p><a href='/computers/list/admin'>Back to the list</a></p>

<table class="table table-striped table-bordered table-hover">
    <tr><td>ID:</td>
        <td> <%= oneComputer.computer_id %> </td></tr>
    <tr><td>Brand:</td>
        <td> <%= oneComputer.brand_name %> </td></tr>
    <tr><td>Model:</td>
        <td> <%= oneComputer.computer_model %> </td></tr>
    <tr><td>CPU:</td>
        <td> <% for (var b of brands) { %>
                <% if(oneComputer.cpu_brand==b.brand_id) { %>
                    <%= b.brand_name %> <% } %>
            <% } %>
            <%= oneComputer.cpu_model %> </td></tr>
    <tr><td>GPU:</td>
        <td> <% for (var b of brands) { %>
                <% if(oneComputer.gpu_brand==b.brand_id) { %>
                    <%= b.brand_name %>
                <% } %>
            <% } %>
            <%= oneComputer.gpu_model %> </td></tr>
    <tr><td>Storage (Go):</td>
        <td> <%= oneComputer.computer_storage %> </td></tr>
    <tr><td>RAM (Go):</td>
        <td> <%= oneComputer.computer_ram %> </td></tr>
    <tr><td>Size (inch):</td>
        <td> <%= oneComputer.computer_size %> </td></tr>
    <tr><td>Price (â‚¬):</td>
        <td> <%= oneComputer.computer_price %> </td></tr>
    <tr><td>Features:</td>
        <td> </td></tr>
    <tr><td>Feature's Price:</td>
        <td></td></tr>
    <tr><td>Stock (unit):</td>
        <td> <%= oneComputer.computer_stocks %> </td></tr>
</table>
</section>
<%- include("partial_footer.ejs"); %>
